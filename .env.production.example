# Production Environment Configuration
# Copy this file to .env.production and replace with your actual production values

# Application Settings
NODE_ENV=production
PORT=5000

# Database Configuration (MongoDB Atlas recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/localmarket
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_super_secure_mongodb_password
MONGO_USER_PASSWORD=your_mongodb_user_password

# Security Keys (Generate strong random keys!)
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Stripe Payment Configuration (LIVE KEYS for Production!)
STRIPE_PUBLISHABLE_KEY=pk_live_your_actual_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_actual_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_actual_webhook_secret

# Email Service Configuration
SENDGRID_API_KEY=SG.your_actual_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# Image Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_actual_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_actual_cloudinary_api_key
CLOUDINARY_API_SECRET=your_actual_cloudinary_api_secret

# Domain Configuration
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# Security Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Redis Configuration (Optional, for caching)
REDIS_PASSWORD=your_redis_password

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/certs/privkey.pem

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_ANALYTICS=true